    </servlet>
    <servlet>
        <servlet-name>ThanhToanServlet</servlet-name>
        <servlet-class>controller.ThanhToanServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendMailAttachServlet</servlet-name>
        <servlet-class>SendMailAttachServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GioHangServlet2</servlet-name>
        <servlet-class>controller.GioHangServlet2</servlet-class>
    </servlet>
   
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
